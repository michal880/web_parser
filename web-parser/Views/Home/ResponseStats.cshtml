﻿@functions
{

    public string GetMarkupsAsString(IEnumerable<string> markups)
    {
        return string.Join(", ", markups);
    }

}

@model web_parser.ViewModels.ResponseViewModel
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Date</th>
            <th>Source Url</th>
            <th>Top 10 markups</th>
            <th>Source Content</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>@Model?.Date</td>
            <td>@Model?.SourceUrl</td>
            <td>@GetMarkupsAsString(Model?.TenMostOccurringMarkups)</td>
            <td>@Model?.SourceContent</td>
        </tr>

    </tbody>
</table>

